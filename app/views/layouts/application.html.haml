!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title OneDPC
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css", :rel => "stylesheet"}/
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js", :type => "text/javascript"}
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"}
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.header
      .header__box
        %a{:href => "/posts"}
          = image_tag "onedpc_logo.png", class: "onedpc-logo"
        - if user_signed_in?
          %ul.header__box__links
            %li= link_to "#{current_user.nickname}", "/users/#{current_user.id}", class: "header__box__links__row"
            %li= link_to "Users Links", "/users", class: "header__box__links__row"
            %li= link_to "Themes Links", "/themes", class: "header__box__links__row"
            %li= link_to "New Post", "/posts/new", class: "header__box__links__row"
            %li= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "header__box__links__row"
            %li= link_to "Today's Top3", "/posts/rank", class: "header__box__links__row"
            %li= link_to "Previous Posts", "/posts/past", class: "header__box__links__row"
        - else
          %ul.header__box__links
            %li= link_to "Sign In", new_user_session_path, class: "header__box__links__row"
            %li= link_to "New Register", new_user_registration_path, class: "header__box__links__row"
            %li= link_to "Previous Posts", "/posts/past", class: "header__box__links__row"
    = yield
