<div class="main">
  <%# メインページ（テーマ） %>
  <div class="main-top">
    <div class="main-top__box">
      <p class="main-top__box--todays-theme">今日のテーマ：『雪』</p>
      <input type="text", placeholder=" 検索する", class="main-top__box--search">
    </div>
  </div>




  <%# メインページ（コンテント） %>
  <div class="main-content">
    <div class="main-content__box">
      <%# <ul class="box-list"> %>
      <ul class="box-list">
        <% @posts.each do |post| %>
          <li class="box-list__image" style="background-image: url(<%= post.image %>);">
            <div class="box-list__image--text-contents">
              <span class="title">タイトル：
                <%= post.title %>
              </span>
              <div class="more">
                <span class="image_tag"><%= image_tag 'arrow_top.png' %></span>
                <ul class="more_list">
                  <li>
                    <%= link_to '詳細', "/posts/#{post.id}", class: "more_list__a-list" %>
                  </li>
                  <li>
                    <%= link_to '編集', "/posts/#{post.id}/edit", class: "more_list__a-list" %>
                  </li>
                  <li>
                    <%= link_to '削除', "/posts/#{post.id}", method: :delete, class: "more_list__a-list" %>
                  </li>
                </ul>
              </div>
              <span class="name">
                nickname
              </span>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div> 
</div>
