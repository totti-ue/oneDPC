.main
  .main-top
    .main-top__box
      %p.main-top__box--todays-theme
        %span{style: "font-weight:bold;"}
        本日のテーマ『
        = @today_theme.name
        』
      = render partial: "/shared/clock"


  .section-one
    %span.section-one__notice-msg{style: "margin-top:80px; color:black;"}
      = notice
    %p.section-one__yesterdays-top
      %span.section-one__yesterdays-top__img-title
        昨日の一枚  
    .section-one__main
      = link_to "#" do
        = image_tag asset_path("#{@posts.second.image}"), class: "section-one__main__left"
      .section-one__main__right
        %p.yesterdays-top-img
          投稿詳細
        %ul.img-detail
          %li.img-detail__list
            テーマ：
            = link_to "#", class: "theme-link" do
              %span.theme-tag.tag1
                = @posts.second.themes.first.name   
          %li.img-detail__list
            タイトル：
            = @posts.second.title
          %li.img-detail__list
            メッセージ：
            〇〇〇〇〇〇〇〇〇〇〇〇〇〇〇〇〇〇〇〇
          %li.img-detail__list
            投稿日：
            = @posts.second.created_at
          %li.img-detail__list
            投稿者：
            = link_to "#{@posts.second.user.nickname}", "#", class: "name-link"
        .likes-favorites-box
          %span.likes-favorites-box__count-box.likes-count
            ❤️ 
            = @likes
          %span.likes-favorites-box__count-box.favorites-count
            ⭐️ 5



