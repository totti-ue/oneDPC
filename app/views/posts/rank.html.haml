.main
  .main-top
    .main-top__box
      %p.main-top__box--todays-theme
        %span{style: "font-weight:bold;"}
          本日のテーマ『
          = @today_theme.name
          』
      = render partial: "/shared/clock"
  .empty-box
  .group
    %ul.tab-group
      %li.tab.is-active
        今日の投稿
        .theme-link
          %span.theme-tag
            = @today_theme.name 

      %li.tab
        昨日の投稿
        .theme-link
          %span.theme-tag
            = @yesterday_theme.name 
      %li.tab
        過去の投稿
        
    .panel-group
      .panel.is-show
        - @today_posts.each do |post|
          = render partial: "post", locals: { post: post }
      .panel
        - @yesterday_posts.each do |post|
          = render partial: "post", locals: { post: post }
      .panel
        - @old_posts.each do |post|
          = render partial: "post", locals: { post: post }

