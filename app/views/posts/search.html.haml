.main
  .main-top
    .main-top__box
      %p.main-top__box--todays-theme
        本日のお題：
        %span{:style => "font-weight:bold;"}
          『　#{@today_theme.name}　』
      = render partial: "/shared/clock"
  %p#notice{:style => "margin-top:120px; color:black;"}= notice
  .main-content
    .main-content__box
      .background-box
      %ul.box-list
        - @posts.each do |post|
          = render partial: "post", locals: { post: post }
