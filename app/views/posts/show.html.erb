<div class="show">
  <div class="show__details">
    <div class="show__details__image" style="background-image: url(<%= @post.image %>);">
      <div class="show__details__image--text-contents">
        <span class="show-title">タイトル：
          <%= @post.title %>
        </span>
        <div class="show-more">
          <span class="show-image_tag"><%= image_tag 'arrow_top.png' %></span>
          <ul class="show-more_list">
            <% if user_signed_in? && current_user.id == @post.user_id %>
              <li>
                <%= link_to '編集', "/posts/#{@post.id}/edit", method: :get, class: "show-more_list__a-list" %>
              </li>
              <li>
                <%= link_to '削除', "/posts/#{@post.id}", method: :delete, class: "show-more_list__a-list" %>
              </li>
            <% end %>
          </ul>
        </div>
          <span class="show-name">
            投稿者<br>
            <%= @post.user.nickname %>
          </span>
      </div>
    </div>
    <div class="comment-box">
      <% if current_user %>
        <%= form_with(model: [@post, @comment], class: "comment-box__form", local: true) do |form| %>
          <%= form.text_area :comment, placeholder: "コメントする", rows: "2" %>
          <div class="submit-box">
            <%= form.submit "SEND", class: "submit-box__send-btn" %>
          </div>
        <% end %>
      <% else %>
        <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
      <% end %>
    </div>
    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.comment %>
          </p>
        <% end %>
      <% end %>
    </div>
    <%= link_to "投稿一覧へ戻る", "/posts", class:"back-to-toppage" %>
  </div>
</div>