.theme-1{style: "padding-top: 100px;"}
  = @theme.name
- @themes.each do |post|
  %li.box-list__image.past-image{style: "background-image: url(#{post.image});"}
  .box-list__image--text-contents
    %span.title
      = post.themes.first.name
      %br
      = post.title
      .more
        %span.image_tag= image_tag 'arrow_top.png'
        %ul.more_list
          %li
            = link_to '詳細', "/posts/#{post.id}", class: "more_list__a-list"
          - if user_signed_in? && current_user.id == post.user_id
            %li
              = link_to '編集', "/posts/#{post.id}/edit", class: "more_list__a-list"
            %li
              = link_to '削除', "/posts/#{post.id}", method: :delete, class: "more_list__a-list"
      %span.iine-box
        %span.iine-count
          %span{style: "font-size:22px; font-weight:bold;"}
            = post.liked_users.count
      %span.name
        = link_to "#{post.user.nickname}", "/users/#{post.user.id}", class: "name-link"

