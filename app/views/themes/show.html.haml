.main
  .main-top
    .main-top__box
      %p.main-top__box--todays-theme
        %span{style: "font-weight:bold;"}
          本日のテーマ『
          = @today_theme.name
          』
      = render partial: "/shared/clock"

  .section-three
    .section-three__top#themes-show
      %h1.todays-posts.sec3-text
        Previous Posts
      %p.posts-theme.sec3-text
        選択中のテーマ　
        %br
      %span.sec3-text
        = link_to "#", class: "theme-link" do
          %span.theme-tag
            = @theme.name 
    
    %ul.section-three__contents
      - if (@themes.count == 0)
        まだ投稿がありません
      - else
        - @themes.each do |post|
          = render partial: "/posts/post", locals: { post: post }

        = paginate(@themes)

  = link_to "Back", :back













